{% extends 'base.html.twig' %}

{% block body %}

<div class="bodyWrapper">
    <div class="segnalazioni">
        <h2>Cerca un distributore</h2>
            <form class="search" action="index.html" method="post">
                <br />
                    <!-- <input class="searchForm" type="text" name="city" value="" placeholder="CittÃ "> -->
                <label class="indexLabel" for="sigarette">&nbsp;&nbsp;Sigarette&nbsp;</label>
                    <input class="indexInput" type="checkbox" name="sigarette" value="" checked>
                <label class="indexLabel" for="tabacco">&nbsp;&nbsp;Tabacco&nbsp;</label>
                    <input class="indexInput" type="checkbox" name="tabacco" value="" checked>
                <label class="indexLabel" for="comdom">&nbsp;&nbsp;Condom&nbsp;</label>
                <input class="indexInput" type="checkbox" name="comdom" value="">
                    &nbsp;&nbsp;<input class="searchForm" type="number" name="resto" min="2" max="15" placeholder="Resto massimo"><br>
                    <input class="indexInput" type="submit" name="invia" value="Filtra per prodotti">
            </form>
    </div>
</div>

<div class="bodyWrapper">
    <div id="map"></div>
</div>


<div class="bodyWrapper">
    <div class="segnalazioni">
        <h2>Segnalaci un distributore non presente sulla mappa</h2>
        <form class="segnala" action="segnalazioni.html" method="post"><br>
            <textarea class="formText" name="nuovo distributore" rows="8" cols="40" placeholder="Inserisci qua il testo della segnalazione"></textarea><br>
            <!-- <input class="formText" type="text" name="nuovo distributore" value=""><br> -->
            <input class="indexInput" type="submit" name="invia" value="Invia segnalazione">

        </form>
    </div>
</div>
